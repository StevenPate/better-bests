---
layout: default.njk
title: "Regional Bestseller Lists"
---
{# {{ region | log }} #}
hi
{% for list in lists  %}
    {% for item in list.current  %}
    <div class="row" style="page-break-after: always;">
        <div class="col-xs-12">
            <div class="box"><h2>{{ item.listName}}</h2></div>
            <div class="col-xs col-md-6">
                <h3>All</h3>
                <ol>
                    {# {{ list | log }} #}
                {% for book in item.listItems %}
                    <li><strong>{{ book.title }}</strong>, {{ book.author }} - {{ book.isbn }}</li>
                {% endfor %}
                </ol>
            </div>
            <div class="col-xs col-md-6">

                <div class="col-xs">
                    <h3>Added</h3>
                    <ol>
                        {# {{ list | log }} #}
                    {% for book in item.addedItems %}
                        <li><strong>{{ book.title }}</strong>, {{ book.author }} - {{ book.isbn }}<br>
                        {{ book.barcode | safe }} </li>
                    {% endfor %}
                    </ol>
                </div>
                <div class="col-xs">
                    <h3>Dropped</h3>
                    <ol>
                        {# {{ list | log }} #}
                    {% for book in item.droppedItems %}
                        <li><strong>{{ book.title }}</strong>, {{ book.author }} - {{ book.isbn }}<br>
                        {{ book.barcode | safe }} </li></li>
                    {% endfor %}
                    </ol>
                </div>
            </div>
    
        </div>
    </div>
    {% endfor %}
{% endfor %}