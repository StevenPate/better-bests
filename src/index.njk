---
layout: default.njk
title: "Regional Bestseller Lists"
---
{% for list in lists  %}
    <header>
        <h1>{{ list.region }}</h1>
    </header>
    {% for item in list.current  %}
    <h2>{{ item.listName}}</h2>
    <div class="listColumns row" style="page-break-after: always;">
        <div class="allColumn col-xs-12 col-sm-6">
            <div class="box">
            <h3>All titles</h3>
            <ol>
                {# {{ list | log }} #}
            {% for book in item.listItems %}
                {# <li><strong>{{ book.title }}</strong>, {{ book.author }} - {{ book.isbn }}</li> #}
                <li>
                    <details>
                        <summary><strong>{{ book.title }}</strong>, {{ book.author }} - {{ book.isbn }}</summary>
                        <img src="{{ book.coverImage }}">
                    </details>
                </li>
            {% endfor %}
            </ol>
            </div>
        </div>
            <div class="added col-sm-3">
                <h3>Added</h3>
                <div class="addedItems">
                {% for book in item.addedItems %}
                    <article  class="bookWithBarcode box" style="min-height:9rem;">
                        <div class="barcode">
                            {{ book.barcode | safe }}
                        </div>
                        <details>
                            <summary style="height:3rem;"><strong>{{ book.title }}</strong></summary>
                            <div class="coverImage">
                                <img src="{{ book.coverImage }}" style="max-width:80%;">
                            </div>
                        </details>
                    </article>
                {% endfor %}
                </div>
            </div>
            <div class="dropped col-md-3">
                <h3>Dropped</h3>
                <div class="droppededItems">
                {% for book in item.droppedItems %}
                    <article  class="bookWithBarcode box" style="min-height:9rem;">
                        <div class="barcode">
                            {{ book.barcode | safe }}
                        </div>
                        <details>
                            <summary style="height:3rem;"><strong>{{ book.title }}</strong></summary>
                            <div class="coverImage">
                                <img src="{{ book.coverImage }}" style="max-width:80%;">
                            </div>
                        </details>
                    </article>
                {% endfor %}
                </div>
            </div>
    </div>
    {% endfor %}
{% endfor %}