---
layout: default.njk
title: "Regional Bestseller Lists"
pagination:
    data: lists
    size: 1
    alias: region
permalink: "{{ region.regionAbbreviation | slugify }}/"
---
{# {{ region | log }} #}

{% for list in region.current %}
<div class="row" style="page-break-after: always;">
    <div class="col-xs-12">
        <div class="box"><h2>{{ list.listName}}</h2></div>
    </div>
    <div class="col-xs col-md-6">
        <h3>All</h3>
        <ol>
            {# {{ list | log }} #}
        {% for book in list.listItems %}
            <li><strong>{{ book.title }}</strong>, {{ book.author }} - {{ book.isbn }}</li>
        {% endfor %}
        </ol>
    </div>
    <div class="col-xs col-md-6">

        <div class="col-xs">
            <h3>Added</h3>
            <ol>
                {# {{ list | log }} #}
            {% for book in list.addedItems %}
                <li><strong>{{ book.title }}</strong>, {{ book.author }} - {{ book.isbn }}<br>
                {{ book.barcode | safe }} </li>
            {% endfor %}
            </ol>
        </div>
        <div class="col-xs">
            <h3>Dropped</h3>
            <ol>
                {# {{ list | log }} #}
            {% for book in list.droppedItems %}
                <li><strong>{{ book.title }}</strong>, {{ book.author }} - {{ book.isbn }}<br>
                {{ book.barcode | safe }} </li></li>
            {% endfor %}
            </ol>
        </div>
    </div>
</div>
{% endfor %}